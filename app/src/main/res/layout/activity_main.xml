<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainActivity">
    <Button
        android:id="@+id/btn_flow_opearators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flow operators" />

    <Button
        android:id="@+id/btn_current_matches_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Matches" />
    <Button
        android:id="@+id/btn_series_info_"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content"
        android:text="Series Info" />
    <Button
        android:id="@+id/btn_series_info_sealed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Series Info with SEALED" />
    <Button
        android:id="@+id/btn_players_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players" />
    <Button
        android:id="@+id/btn_data_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Store (SharedPreff depricated)" />
    <Button
        android:id="@+id/btn_pager3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jetpack: Pager3" />
    <Button
        android:id="@+id/btn_constrainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Constrain Layout" />
    <Button
        android:id="@+id/btn_two_way_databinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 Way Data binding" />
    <Button
        android:id="@+id/btn_room_db_two_way_databinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RoomDB_ 2Way Data binding" />
    <Button
        android:id="@+id/btn_firebase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FireBase" />


</LinearLayout>